{
  "name": "id-electron",
  "version": "1.0.0",
  "description": "iD editor running locally via Electron",
  "main": "main.js",
  "license": "ISC License",
  "scripts": {
    "build:id": "npm run build:clean && bash build-id-dist.sh",
    "build:clean": "rm -rf out/ && rm -rf dist/",
    "start": "npm run build:id && electron-forge start",
    "package": "npm run build:id && electron-forge package",
    "make": "npm run build:id && electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^19.0.9"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "protocols": [
          {
            "name": "iD-Electron",
            "schemes": [
              "id-electron"
            ]
          }
        ],
        "ignore": [
          "build-id-dist.sh"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "id_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "mimeType": [
              "x-scheme-handler/id-electron"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "mimeType": [
              "x-scheme-handler/id-electron"
            ]
          }
        }
      ]
    }
  }
}
