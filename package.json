{
  "name": "id-electron",
  "version": "0.0.1",
  "description": "iD editor running locally via Electron",
  "main": "main.js",
  "license": "ISC License",
  "scripts": {
    "build:id": "bash build-id-dist.sh",
    "build:id:windows": "powershell build-id-dist.ps1",
    "start": "npm run build:id && electron-forge start",
    "package": "npm run build:id && electron-forge package",
    "make": "npm run build:id && electron-forge make",
    "make:windows": "npm run build:id:windows && electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^19.0.9"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "protocols": [
          {
            "name": "iD-Electron",
            "schemes": [
              "id-electron"
            ]
          }
        ],
        "ignore": [
          "build-id-dist.sh"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32",
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "mimeType": [
              "x-scheme-handler/id-electron"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "mimeType": [
              "x-scheme-handler/id-electron"
            ]
          }
        }
      ]
    }
  }
}
