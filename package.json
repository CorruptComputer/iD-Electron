{
    "name": "id-electron",
    "version": "1.0.0",
    "description": "iD editor running locally via Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:all": "npm run build:win32 && npm run build:darwin && npm run build:linux",
        "build:win32": "rm -rf iD-win32-x64 && npx electron-packager . iD --platform=win32 --arch=x64 --protocol=id-electron --protocol-name='iD-Electron'",
        "build:darwin": "rm -rf iD-darwin-x64 && npx electron-packager . iD --platform=darwin --arch=x64 --protocol=id-electron --protocol-name='iD-Electron'",
        "build:linux": "rm -rf iD-linux-x64 && npx electron-packager . iD --platform=linux --arch=x64 --protocol=id-electron --protocol-name='iD-Electron'"
    },
    "devDependencies": {
        "electron": "^19.0.9",
        "electron-packager": "^15.5.1"
    }
}
